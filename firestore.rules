rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Stripe Extension Rules (as provided)
    match /customers/{uid} {
      allow read: if request.auth.uid == uid;

      match /checkout_sessions/{id} {
        allow read, write: if request.auth.uid == uid;
      }
      match /subscriptions/{id} {
        allow read: if request.auth.uid == uid;
      }
      match /payments/{id} {
        allow read: if request.auth.uid == uid;
      }
    }

    match /products/{id} {
      allow read: if true;

      match /prices/{id} {
        allow read: if true;
      }

      match /tax_rates/{id} {
        allow read: if true;
      }
    }

    // Your Listings Collection Rules
    match /listings/{listingId} {
      allow read: if true; // Allow all users to read

      allow create, update, delete: if request.auth != null; // Allow only authenticated users to write
    }
  }
}
